<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foto_entrada"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="br.com.milatosoft.comprices.activities.LoginActivity">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="91dp"
        android:layout_height="103dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/icone005" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"
        android:gravity="bottom"
        android:text="Comprices"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary50"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/id_bto_login_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/id_bto_entd_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#3B5991"
            android:drawableStart="@drawable/f_facebook_32"
            android:onClick="onClick"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Entrar com o Facebook"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_bto_entd_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:drawableStart="@drawable/icon_google_32"
            android:onClick="onClick"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Entrar com o Google"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>
